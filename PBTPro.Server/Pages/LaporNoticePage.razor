                            <DxFormLayoutItem ColSpanMd="4" BeginRow="true">
                                <table class="layout_edit">
                                    <tr>
                                        <td nowrap colspan="7">
                                            #@dtData.NoRujukan &nbsp; @GetStatusNoticeIconHtml(dtData.StatusNotis) <br />
