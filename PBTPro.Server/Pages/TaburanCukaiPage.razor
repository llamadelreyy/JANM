                                                 RootItemExpandButtonDisplayMode=AccordionExpandButtonDisplayMode.Start
                                                 AnimationType="LayoutAnimationType.Slide">
                                        <Items>

                                            @foreach (var lesenItem in premisInfo.premis_license_tax)
                                            {

                                                @*<DxAccordionItem Expanded="true">
                                    <HeaderTextTemplate>
                                    <div>
                                    <div class="text-center flex-grow-1 dxbl-accordion-item-text">
                                    @($"{lesenItem.license.business_name}")

                                    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 30 30">
                                    <circle cx="15" cy="15" r="5" fill="@GetColorLot(lesenItem.status_lesen_id ?? 0)" />
                                    </svg>
                                    </div>
                                    </div>
                                    </HeaderTextTemplate>
                                    <ContentTemplate>
                                    <PremisCard PremisInfo="@lesenItem" LatLng="@(new LatLngLiteral { Lat=dblLat, Lng=dblLng })" Dtfloor="@_floorPremis" />
                                    </ContentTemplate>
                                    </DxAccordionItem>*@

                                                if (lesenItem.license != null)
                                                {
                                                    <DxAccordionItem Expanded="true">
                                                        <HeaderTextTemplate>
                                                            <div>
                                                                <div class="text-center flex-grow-1 dxbl-accordion-item-text">
                                                                    @($"{lesenItem.license.business_name}")

                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 30 30">
                                                                        <circle cx="15" cy="15" r="5" fill="@GetColorLot(lesenItem.status_lesen_id ?? 0)" />
                                                                    </svg>
                                                                </div>
                                                            </div>
                                                        </HeaderTextTemplate>
                                                        <ContentTemplate>
                                                            <PremisCard PremisInfo="@lesenItem" LatLng="@(new LatLngLiteral { Lat=dblLat, Lng=dblLng })" Dtfloor="@_floorPremis" />
                                                        </ContentTemplate>
                                                    </DxAccordionItem>
                                                }
                                                else
                                                {
                                                    <DxAccordionItem Expanded="true">
                                                        <HeaderTextTemplate>
                                                            <div>
                                                                <div class="text-center flex-grow-1 dxbl-accordion-item-text">TIADA DATA</div>
                                                            </div>
                                                        </HeaderTextTemplate>
                                                        <ContentTemplate>
                                                            <PremisCard PremisInfo="@lesenItem" LatLng="@(new LatLngLiteral { Lat=dblLat, Lng=dblLng })" Dtfloor="@_floorPremis" />
                                                        </ContentTemplate>
                                                    </DxAccordionItem>
                                                }

                                            }


                                        </Items>
                                    </DxAccordion>
                                </DxTabPage>
                                <!-- 2nd Tab -->
                                <DxTabPage Text="Maklumat Cukai">
                                    <!-- ContentTemplate Context dont give name that has this "-"". ex:Level1-Lot1 -->
                                    <DxAccordion ShowFilterPanel="true"
                                                 ExpandMode=AccordionExpandMode.MultipleOrNone
                                                 ExpandCollapseAction=AccordionExpandCollapseAction.Auto
                                                 RootItemExpandButtonDisplayMode=AccordionExpandButtonDisplayMode.Start
                                                 AnimationType="LayoutAnimationType.Slide">
                                        <Items>

                                            @{
                                                var _dtTax = premisInfo.premis_license_tax.First();
                                            }

                                            @if (_dtTax.tax != null)
                                            {

                                                <DxAccordionItem Expanded="true">
                                                    <HeaderTextTemplate>
                                                        <div>
                                                            <div class="text-center flex-grow-1 dxbl-accordion-item-text">
                                                                @($"NO CUKAI : {(string.IsNullOrEmpty(_dtTax.tax.tax_accno) ? "TIADA DATA" : _dtTax.tax.tax_accno)}")
                                                                &nbsp;&nbsp;&nbsp;&nbsp;
                                                                <span class="e-status">@GetStatusIconHtml(_dtTax.status_tax_id ?? 0)</span>
                                                            </div>
                                                        </div>
                                                    </HeaderTextTemplate>
                                                    <ContentTemplate>
                                                        <PremisTax _dtTax="@_dtTax" LatLng="@(new LatLngLiteral { Lat=dblLat, Lng=dblLng })" />
                                                    </ContentTemplate>
                                                </DxAccordionItem>
                                            }
                                            else
                                            {

                                                <DxAccordionItem Text="TIADA DATA" Expanded="true">
                                                    <ContentTemplate>
                                                        <div class="e-card">
                                                            <div class="e-main d-flex align-items-center">
                                                                <div class="e-info flex-grow-1 ms-3 py-3">
                                                                    <div class="e-name">Tarikh Cukai :-</div>
                                                                    <div class="e-name">Nama Pemilik : -</div>
                                                                    <div class="e-name">Alamat Pemilik : -</div>
                                                                    <div class="e-name">Telefon No : -</div>
                                                                    <div class="e-address">Alamat Premis : -</div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </ContentTemplate>
                                                </DxAccordionItem>
                                            }
                                        </Items>
                                    </DxAccordion>
                                </DxTabPage>
                            </DxTabs>
                        </div>

                    }
                    else if (valueType == 2)
                    {

