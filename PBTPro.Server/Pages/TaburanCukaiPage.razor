                                                            <DxAccordion ExpandMode=AccordionExpandMode.MultipleOrNone
                                                                         ExpandCollapseAction=AccordionExpandCollapseAction.Auto
                                                                         RootItemExpandButtonDisplayMode=AccordionExpandButtonDisplayMode.Start
                                                                         AnimationType="LayoutAnimationType.Slide">
                                                                <Items>

                                                                    @foreach (var lesenItem in premisInfo.premis_license_tax)
                                                                    {
                                                                        if (lesenItem.floor_building == _floor)
                                                                        {
                                                                            if (lesenItem.license != null)
                                                                            {
                                                                                <DxAccordionItem Expanded="true">
                                                                                    <HeaderTextTemplate>
                                                                                        <div>
                                                                                            <div class="text-center flex-grow-1 dxbl-accordion-item-text">
                                                                                                @($"{lesenItem.license.business_name}")

                                                                                                <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 30 30">
                                                                                                    <circle cx="15" cy="15" r="5" fill="@GetColorLot(lesenItem.status_lesen_id ?? 0)" />
                                                                                                </svg>
                                                                                            </div>
                                                                                        </div>
                                                                                    </HeaderTextTemplate>
                                                                                    <ContentTemplate>
                                                                                        <PremisCard PremisInfo="@lesenItem" LatLng="@(new LatLngLiteral { Lat=dblLat, Lng=dblLng })" Dtfloor="@_floorPremis" />
                                                                                    </ContentTemplate>
                                                                                </DxAccordionItem>
                                                                            }
                                                                            else
                                                                            {
                                                                                <DxAccordionItem Expanded="true">
                                                                                    <HeaderTextTemplate>
                                                                                        <div>
                                                                                            <div class="text-center flex-grow-1 dxbl-accordion-item-text">TIADA DATA</div>
