                                //Need to check how many floor
                                foreach (var _dtPremis in premisInfo.premis_license_tax)
                                {
                                    if (!_floorPremis.Contains(_dtPremis.floor_building.ToString()))
                                    {
                                        _floorPremis.Add(_dtPremis.floor_building.ToString());
                                    }
                                }
                            }
                        }

                        //Count the list to get how many floor
                        valueType = 1;  //set the default value - only 1 floor
                        if (_floorPremis.Count() == 0)
                            valueType = 0;
                        else if (_floorPremis.Count() > 1)
                            valueType = 2; //more the 1 floor

                        //Clear back the label
                        _labelText = "";
