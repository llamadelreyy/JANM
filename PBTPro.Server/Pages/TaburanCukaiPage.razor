                                                 RootItemExpandButtonDisplayMode=AccordionExpandButtonDisplayMode.End
                                                 AnimationType="LayoutAnimationType.Slide">
                                        <Items>

                                            @foreach (var _floor in _floorPremis)
                                            {

                                                <DxAccordionItem Text="@($"Aras {_floor}")">
                                                    <ContentTemplate Context="currentFloor">
                                                        @{
                                                            var currentFloor = _floor; // Use 'floor' inside the template
                                                        }
