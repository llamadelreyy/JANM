                                                                                    </HeaderTextTemplate>
                                                                                    <ContentTemplate>
                                                                                        <PremisCard PremisInfo="@lesenItem" LatLng="@(new LatLngLiteral { Lat=dblLat, Lng=dblLng })" Dtfloor="@_floorPremis" />
                                                                                    </ContentTemplate>
                                                                                </DxAccordionItem>
                                                                            }

                                                                        }
                                                                    }

                                                                </Items>
                                                            </DxAccordion>



                                                        </div>
                                                    </ContentTemplate>
                                                </DxAccordionItem>

                                            }

                                        </Items>
                                    </DxAccordion>
                                </DxTabPage>
                                <!-- 2nd Tab -->
